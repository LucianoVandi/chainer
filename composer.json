{
    "name": "lvandi/chainer",
    "description": "This is my package chainer",
    "keywords": [
        "chainer"
    ],
    "homepage": "https://github.com/LucianoVandi/chainer",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Vandi",
            "email": "vandi.luciano@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0"
    },
    "suggest": {
        "psr/container": "Use a PSR-11 container to resolve middleware by id"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5.9"
    },
    "autoload": {
        "psr-4": {
            "Lvandi\\Chainer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lvandi\\Chainer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit -c phpunit.coverage.xml --coverage-text",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
        "format-check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --dry-run --diff",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
